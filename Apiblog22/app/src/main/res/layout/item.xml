<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/btn"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nombreusuario"
            android:textSize="15sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Date"
            android:textSize="12sp"></TextView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:clipToPadding="false"
            android:elevation="3dp"
            android:layout_width="388dp"
            android:layout_height="117dp"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imagen"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:paddingRight="5dp"
                android:src="@mipmap/ic_posticon" />

            <TextView
                android:id="@+id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imagen"
                android:text="Titulo"
                android:textSize="20sp"
                android:textColor="#4C85FA"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/descripcion"
                android:layout_width="125dp"
                android:layout_height="73dp"
                android:layout_below="@id/titulo"
                android:layout_marginTop="-2dp"
                android:layout_toEndOf="@id/imagen"
                android:layout_toRightOf="@id/imagen"
                android:text="Descripcion"
                android:textColor="@color/black_effective"
                android:textSize="12sp">

            </TextView>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:clipToPadding="false"
        android:elevation="6dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-4dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:clipToPadding="false"
            android:elevation="6dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/vistas"
                android:textColor="#4C85FA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:paddingLeft="10dp"
                android:text="Vistas"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/likes"
                android:textColor="#4C85FA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:paddingRight="16dp"
                android:text="Likes"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/likebutton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="-100dp"
                android:layout_toRightOf="@id/vistas"
                android:background="@drawable/ic_thumb_up_black_24dp2">

            </Button>

            <TextView
                android:textColor="#4C85FA"
                android:id="@+id/comentarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="38dp"
                android:paddingLeft="250dp"
                android:text="Comentarios"
                android:textStyle="bold"/>


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:clipToPadding="false"
        android:elevation="3dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:padding="3dp">

        <androidx.cardview.widget.CardView
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="10dp"
            card_view:cardBackgroundColor="#F5F6F7"
            card_view:cardCornerRadius="10dp"
            card_view:cardUseCompatPadding="true">

            <TextView
                android:id="@+id/tags"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:text="TAGS"
                android:textAlignment="center"
                android:textColor="@color/black_effective"></TextView>
        </androidx.cardview.widget.CardView>

</LinearLayout>
</LinearLayout>